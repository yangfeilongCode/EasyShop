<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="feicui.edu.easyshop.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:background="#ff3300"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:text="TITLE"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </android.support.v4.view.ViewPager>
<LinearLayout
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#dddddd"
    android:layout_width="match_parent"
    android:layout_height="60dp">
  <TextView
      android:id="@+id/tv_main_shop"
      android:layout_weight="1"
      android:gravity="center"
      android:text="市场"
      android:drawableTop="@drawable/selector_shopping"
      android:layout_width="0dp"
      android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_main_message"
        android:layout_weight="1"
        android:gravity="center"
        android:text="消息"
        android:drawableTop="@drawable/selector_message"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_main_mail"
        android:layout_weight="1"
        android:gravity="center"
        android:text="通讯录"
        android:drawableTop="@drawable/selector_list_mail"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_main_my"
        android:layout_weight="1"
        android:gravity="center"
        android:text="我的"
        android:drawableTop="@drawable/selector_my"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>
</LinearLayout>
